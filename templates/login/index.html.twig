{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('app_login') }}" method="post">
        <label for="username">Email :</label>
        <input class="input" type="text" id="username" name="_username" value="{{ last_username }}">

        <label for="password">Mots de passe :</label>
        <input class="input" type="password" id="password" name="_password">

        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"> #}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button type="submit"  class="button is-primary is-size-3" >Connexion</button>
    </form>
{% endblock %}
