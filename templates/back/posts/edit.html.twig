{% extends 'base.html.twig' %}

{% block title %}Edit Posts{% endblock %}

{% block body %}
    <h1>Modifier l'article</h1>
    <div class="cards">
        <div class="card-krea">
            Le sous-titre de l'article ne doit pas faire plus de 70 caractère comme le texte ici 70 ...
        </div>
        <div class="card-krea">
            <img src={{post.imgThumbnail}} alt="">
        </div>
    </div>

        
    {{ include('back/posts/_form.html.twig', {'button_label': 'Sauvegarder'}) }}

    <a href="{{ path('app_back_posts_index') }}" class="button is-light">Retour à la list</a>

    {% if is_granted('ROLE_MANAGER') %}
        {{ include('back/posts/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
