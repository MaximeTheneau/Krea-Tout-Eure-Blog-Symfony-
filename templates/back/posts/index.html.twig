{% extends 'base.html.twig' %}

{% block title %}Posts index{% endblock %}

{% block body %}
    <h1>Posts index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Contents</th>
                <th>Contents2</th>
                <th>Slug</th>
                <th>ImgPost</th>
                <th>ImgPost2</th>
                <th>ImgPost3</th>
                <th>ImgPost4</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.contents }}</td>
                <td>{{ post.contents2 }}</td>
                <td>{{ post.slug }}</td>
                <td>{{ post.imgPost }}</td>
                <td>{{ post.imgPost2 }}</td>
                <td>{{ post.imgPost3 }}</td>
                <td>{{ post.imgPost4 }}</td>
                <td>
                    <a href="{{ path('app_back_posts_show', {'id': post.id}) }}">show</a>
                    <a href="{{ path('app_back_posts_edit', {'id': post.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_posts_new') }}">Create new</a>
{% endblock %}
